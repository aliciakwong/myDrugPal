<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToIntakeDiaryActivity">

    <EditText
        android:id="@+id/nameOfSubstanceEdit"
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:hint="name of substance"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/typeOfSubstanceEdit"
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="type of substance"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameOfSubstanceEdit" />

    <EditText
        android:id="@+id/amountEdit"
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="amount"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeOfSubstanceEdit" />

    <TextView
        android:id="@+id/addSubstanceView"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="731dp"
        android:gravity="center"
        android:text="  Add Substance to Diary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addSubstancebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add substance"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="636dp" />
</androidx.constraintlayout.widget.ConstraintLayout>